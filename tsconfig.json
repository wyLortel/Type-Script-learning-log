{
  "compilerOptions": {
    /* ===============================
       1컴파일 결과 문법 수준
       =============================== */

    // TypeScript를 어떤 JavaScript 문법 버전으로 변환할지 결정
    //  "ESNext"라고 설명함
    // → 최신 JS 문법으로 컴파일 (환경이 지원해야 함)
    "target": "esnext",

    /* ===============================
       2️모듈 시스템 )
       =============================== */

    // "nodenext" → 최신 Node.js 기준
    //  - package.json의 "type": "module" 여부를 따름
    //  - ES Module(import/export) + CommonJS 혼합 지원
    //
    "module": "nodenext",

    /* ===============================
       3️출력 디렉토리
       =============================== */

    // 강의에서 말한 outDir 옵션
    // → tsc로 컴파일할 때 JS 파일을 어디에 저장할지 알려줌
    //
    // 현재는 주석 처리됨:
    // 이유 → tsx로 실행 중이라 "저장"을 안 하기 때문
    // "outDir": "./dist",

    /* ===============================
       4️ 타입 정의 관련
       =============================== */

    // 자동으로 포함되는 @types 패키지를 비움
    // (Node 타입 등을 명시적으로 관리하려는 설정)
    "types": [],

    /* ===============================
       5️소스맵 / 선언 파일
       =============================== */

    // JS ↔ TS 코드 매핑 파일 생성 (디버깅용)
    "sourceMap": true,

    // .d.ts 타입 선언 파일 생성
    // 라이브러리 만들 때 주로 사용
    "declaration": true,

    // declaration 파일용 소스맵
    "declarationMap": true,

    /* ===============================
       6️⃣ 엄격한 타입 체크 (강의의 strict)
       =============================== */

    // 강의에서 말한 "strict: true"
    // → 모든 엄격 옵션 묶음
    "strict": true,

    // 배열[index] 접근 시 undefined 가능성까지 체크
    "noUncheckedIndexedAccess": true,

    // optional 프로퍼티를 더 엄격하게 처리
    "exactOptionalPropertyTypes": true,

    /* ===============================
       7️⃣ JSX / React 관련
       =============================== */

    // React 17+ JSX 변환 방식
    // 강의가 React 포함이면 설명됐을 가능성 있음
    "jsx": "react-jsx",

    /* ===============================
       8️⃣ 최신 TS / 번들러 친화 옵션
       =============================== */

    // import/export 문법을 그대로 유지
    // (강의에서는 거의 안 다룸 — 최신 옵션)
    "verbatimModuleSyntax": true,

    // 파일 하나하나를 독립 모듈로 취급
    // Babel / tsx / bundler 사용 시 필수
    "isolatedModules": true,

    // 타입 체크 안 할 라이브러리 파일 건너뜀
    // 강의의 skipLibCheck와 동일한 목적
    "skipLibCheck": true,

    // 사이드 이펙트 없는 import 체크
    "noUncheckedSideEffectImports": true,

    // 모듈 파일 강제 인식
    "moduleDetection": "force"
  }
}
